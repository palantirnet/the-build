<project name="phptodo" default="test-run-phptodo">

    <property name="phptodo.config" value="vendor/palantirnet/the-build/conf/php_todo_finder.yml" />

    <!-- Target: test-run-phptodo -->
    <target name="test-run-phptodo">
        <echo>Checking modules</echo>
        <exec
            command="${build.dir}/vendor/bin/php_todo --config=${build.dir}/${phptodo.config} find ${build.dir}/${drupal.root}/modules/custom"
            passthru="true"
        />
        <echo>Checking profiles</echo>
        <exec
            command="${build.dir}/vendor/bin/php_todo --config=${build.dir}/${phptodo.config} find ${build.dir}/${drupal.root}/profiles/custom"
            passthru="true"
        />
        <echo>Checking themes</echo>
        <exec
            command="${build.dir}/vendor/bin/php_todo --config=${build.dir}/${phptodo.config} find ${build.dir}/${drupal.root}/themes/custom"
            passthru="true"
        />
    </target>


</project>
